<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.details">
            <block class="Mageplaza\HelloWorld\Block\Product\CustomTab" name="product.custom.tab" template="Mageplaza_HelloWorld::product/custom_tab.phtml" group="detailed_info">
                <arguments>
<!--                    Show after Review Tab (sort_order iis 30)-->
                    <argument name="sort_order" xsi:type="string">40</argument>
                    <argument translate="true" name="title" xsi:type="string">Custom Tab</argument>
                </arguments>
            </block>
        </referenceContainer>

    </body>
</page>